<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="Black">
        <Label  Content="Введите имя" HorizontalAlignment="Center" Margin="0,70,0,0" VerticalAlignment="Top" Width="288" Height="125" Background="Black" Foreground="#FFF1C3C3" FontSize="36" FontFamily="Segoe Script"/>
        <TextBox x:Name="text1" HorizontalAlignment="Center" Margin="0,200,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160" Height="25" TextChanged="text_TextChanged"/>
        <Button Content="Начать тестирование" HorizontalAlignment="Center" Margin="0,333,0,0" VerticalAlignment="Top" Height="32" Width="162" Click="Button_Click"/>

    </Grid>
</Window>
